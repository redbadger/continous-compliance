{
  "name": "continous-compliance",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:redbadger/continous-compliance.git",
  "description": "GitHub Action that gather compliance evidence and store it in the cloud",
  "author": "Pedro Martin <pataruco@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "typescript": "^4.2.3"
  },
  "lint-staged": {
    "*.{js,json,yml,md}": [
      "yarn prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
